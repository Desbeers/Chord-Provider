{
  "app-id": "nl.desbeers.chordprovider",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift6"
  ],
  "command": "ChordProvider",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/swift6/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/swift6/lib"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "ChordProvider",
      "builddir": true,
      "buildsystem": "simple",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "build-commands": [
        "cd ChordProviderGnome && swift build -c release --static-swift-stdlib",
        "install -Dm755 ChordProviderGnome/.build/release/ChordProvider /app/bin/ChordProvider",
        "install -Dm644 ChordProviderGnome/.build/release/GtkSourceView_SourceView.resources/chordpro.lang /app/bin/GtkSourceView_SourceView.resources/chordpro.lang",
        "install -Dm644 ChordProviderGnome/data/nl.desbeers.chordprovider.metainfo.xml /app/share/metainfo/nl.desbeers.chordprovider.metainfo.xml",
        "install -Dm644 ChordProviderGnome/data/nl.desbeers.chordprovider.desktop /app/share/applications/nl.desbeers.chordprovider.desktop",
        "install -Dm644 ChordProviderGnome/data/icons/nl.desbeers.chordprovider.svg /app/share/icons/hicolor/scalable/apps/nl.desbeers.chordprovider.svg",
        "install -Dm644 ChordProviderGnome/data/icons/nl.desbeers.chordprovider-symbolic.svg /app/share/icons/hicolor/symbolic/apps/nl.desbeers.chordprovider-symbolic.svg"
      ]
    }
  ]
}
