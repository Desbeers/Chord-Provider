<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>nl.desbeers.chordprovider</id>

  <name>Chord Provider</name>
  <summary>A ChordPro viewer and editor</summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <releases>
    <release version="1.0.0" date="2026-02-01">
      <description>
        <ul>
          <li>Initial public release</li>
        </ul>
      </description>
    </release>
  </releases>

  <keywords>
    <keyword>chordpro</keyword>
    <keyword>chords</keyword>
    <keyword>music</keyword>
    <keyword>guitar</keyword>
  </keywords>

  <categories>
    <category>Music</category>
    <category>Utility</category>
  </categories>

  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <content_rating type="oars-1.1"/>

  <developer id="nl.desbeers">
    <name translatable="no">Nick Berendsen</name>
  </developer>

  <description>
    <p>
      Chord Provider is a ChordPro viewer and editor for GNOME that show the source in a beautiful view with chord diagrams.
    </p>
    <ul>
      <li>View your songs</li>
      <li>Transpose your songs</li>
      <li>Edit your songs using a modern, distraction-free editor</li>
      <li>Provide a large built-in chord database</li>
      <li>Play chords using MIDI</li>
      <li>Support left-handed chord diagrams</li>
    </ul>
  </description>

