{
  "app-id": "nl.desbeers.chordprovider",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift5"
  ],
  "command": "ChordProvider",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/swift5/bin",
    "prepend-ld-library-path": "/usr/lib/sdk/swift5/lib"
  },
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "ChordProvider",
      "builddir": true,
      "buildsystem": "simple",
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ],
      "build-commands": [
        "./setup-offline.sh",
        "swift build -c release --static-swift-stdlib --skip-update",
        "strip .build/release/ChordProvider",
        "install -Dm755 .build/release/ChordProvider /app/bin/ChordProvider",
        "install -Dm644 data/nl.desbeers.chordprovider.metainfo.xml $DESTDIR/app/share/metainfo/nl.desbeers.chordprovider.metainfo.xml",
        "install -Dm644 data/nl.desbeers.chordprovider.desktop $DESTDIR/app/share/applications/nl.desbeers.chordprovider.desktop",
        "install -Dm644 data/icons/nl.desbeers.chordprovider.svg $DESTDIR/app/share/icons/hicolor/scalable/apps/nl.desbeers.chordprovider.svg",
        "install -Dm644 data/icons/nl.desbeers.chordprovider-symbolic.svg $DESTDIR/app/share/icons/hicolor/symbolic/apps/nl.desbeers.chordprovider-symbolic.svg"
      ]
    }
  ]
}
